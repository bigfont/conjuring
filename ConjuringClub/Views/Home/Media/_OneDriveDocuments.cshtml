<section ng-controller="OneDriveCtrl">
    <div class="page-header">
        <h1 id="documents">Documents</h1>
    </div>
    <div class="panel-group" id="accordion-documents">
        <div class="panel panel-default" ng-repeat="document in documents">
            <div class="panel-heading">
                <h4 ng-class="panel-title" ng-click="open(document)">
                    <a data-toggle="collapse"
                       data-parent="#accordion-documents"
                       href="#{{$index}}">{{ document.Title }}</a>
                </h4>
            </div>
            <div id="{{$index}}" class="panel-collapse collapse">
                <div class="panel-body">
                    <div class="embed-responsive embed-responsive-16by9" ng-hide="document.iframeSrc == null">
                        <iframe class="embed-responsive-item" ng-src="{{ document.iframeSrc }}"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>