@using ConjuringClub.ViewModels;

@model YouTubeVideoViewModel[]

<section ng-controller="YouTubeCtrl">
    <div class="page-header">
        <h1 id="videos">Videos</h1>
    </div>
    <ul>
        <li class="list-group-item {{ $odd ? 'odd-child' : 'even-child' }}" ng-repeat="video in videos">
            <!--author-->
            <span>{{ video.Title }}</span>            
        </li>
    </ul>

</section>

